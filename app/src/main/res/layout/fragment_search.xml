<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="Discover"
        android:textColor="#8C1A11"
        android:textColorLink="#8C1A11"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/discover"
        android:hint="Search for clubs"
        android:padding="8dp"
         />

    <TextView
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="Categories"
        android:textColor="#8C1A11"
        android:textColorLink="#8C1A11"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/searchRecyclerView"
        app:layout_constraintStart_toStartOf="@id/discover"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintVertical_bias="0.184" />

    <HorizontalScrollView
        android:id="@+id/category_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/categories">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/academic_career"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/education_bag_learning_24_svgrepo_com" />
            <ImageButton
                android:id="@+id/activism_advocacy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/advocate_svgrepo_com" />
            <ImageButton
                android:id="@+id/agriculture_environmental"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/care_ecology_environment_svgrepo_com" />
            <ImageButton
                android:id="@+id/arts_music"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/art_design_paint_pallet_format_text_svgrepo_com" />
            <ImageButton
                android:id="@+id/cultural_ethnic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/globe_1_svgrepo_com" />
            <ImageButton
                android:id="@+id/graduate_professional"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/professional_marketplace_svgrepo_com" />
            <ImageButton
                android:id="@+id/health_wellness"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/health_medical_svgrepo_com" />
            <ImageButton
                android:id="@+id/media_publication"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/newspaper_svgrepo_com" />
            <ImageButton
                android:id="@+id/political_interest"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/government_svgrepo_com" />
            <ImageButton
                android:id="@+id/religious_spiritual"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/heavensabove_svgrepo_com" />
            <ImageButton
                android:id="@+id/service_volunteer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/heart_svgrepo_com" />
            <ImageButton
                android:id="@+id/social_fraternity_sorority"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/people_svgrepo_com" />
            <ImageButton
                android:id="@+id/sports_recreation"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sports_football_svgrepo_com" />


        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintTop_toBottomOf="@id/category_buttons"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>